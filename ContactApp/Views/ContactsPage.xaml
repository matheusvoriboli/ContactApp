<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactApp.Views.ContactsPage"
             Title="Contacts">
    <ListView x:Name="listContacts" RowHeight="60" ItemSelected="ListContacts_OnItemSelected" ItemTapped="ListContacts_OnItemTapped">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding Name}" Detail="{Binding Email}" />
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>
